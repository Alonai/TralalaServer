<?xml version="1.0"?>
<!DOCTYPE orm SYSTEM "file:/javax/jdo/orm.dtd">
<orm>
    <package name="data">    
        <class name="DBItem">
            <field name="id">
                <column length="100" jdbc-type="VARCHAR"/>
            </field>
        </class>
        
        <class name="Artist">
            <inheritance strategy="new-table"/>
            <field name="name">
                <column length="40" jdbc-type="VARCHAR"/>
            </field>
            <field name="songs" default-fetch-group="true">
            	<collection element-type="data.Song" dependent-element="true"/>
            	<join/>
        	</field>
         </class>
         
         <class name="Album">
            <field name="title">
           		<column length="40" jdbc-type="VARCHAR"/>
            </field>
            <field name="releaseDate">
           		<column length="40" jdbc-type="VARCHAR"/>
            </field>
            <field name="songs" default-fetch-group="true">
            	<collection element-type="data.Song" dependent-element="true"/>
            	<join/>
        	</field>
         </class>
         
        <class name="Song">
            <field name="songTitle">
                <column length="40" jdbc-type="VARCHAR"/>
            </field>
			<field name="duration">
                <column length="40" jdbc-type="INTEGER"/>
            </field>
            <field name="ppp">
                <column jdbc-type="DOUBLE"/>
            </field>
            <field name="artist">               
            </field>
            <field name="album" default-fetch-group="true">               
            </field>
		</class>
		
		<class name="Member">
            <field name="name">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
			<field name="nick">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
            <field name="plays" default-fetch-group="true">
            	<collection element-type="data.Play" dependent-element="true"/>
            	<join/>
        	</field>
            <field name="bankAccount">
                <column length="128" jdbc-type="BIGINT"/>
            </field>
            <field name="paymentService">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
		</class>
		
		<class name="Play">
            <field name="date">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
			<field name="time">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
            <field name="songId">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
            <field name="memberId">
                <column length="128" jdbc-type="VARCHAR"/>
            </field>
		</class>
    </package>
</orm>